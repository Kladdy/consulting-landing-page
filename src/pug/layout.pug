//- layout.pug
doctype html
html(lang='sv')
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        //- meta(name='author', content='')

        //- // Favicon
        //- Generated using https://realfavicongenerator.net
        //- link(rel='icon', type='image/x-icon', href='assets/favicon.ico') (OLD METHOD)
        link(rel='apple-touch-icon' sizes='180x180' href='/assets/icons/apple-touch-icon.png')
        link(rel='icon' type='image/png' sizes='32x32' href='/assets/icons/favicon-32x32.png')
        link(rel='icon' type='image/png' sizes='16x16' href='/assets/icons/favicon-16x16.png')
        link(rel='manifest' href='/assets/icons/site.webmanifest')
        link(rel='mask-icon' href='/assets/icons/safari-pinned-tab.svg' color='#25225d')
        link(rel='shortcut icon' href='/assets/icons/favicon.ico')
        meta(name='msapplication-TileColor' content='#25225d')
        meta(name='msapplication-config' content='/assets/icons/browserconfig.xml')
        meta(name='theme-color' content='#25225d')


        // Bootstrap icons
        link(href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css', rel='stylesheet', type='text/css')

        //- // FontAwesome JS
        //- script(src="https://kit.fontawesome.com/d859ded2d4.js" crossorigin="anonymous")
        // FontAwesome
        link(href="css/all.css" rel='stylesheet' type="text/css")

        // Google fonts
        link(href='https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic', rel='stylesheet', type='text/css')

        // Core theme CSS (includes Bootstrap)
        link(href='css/styles.css', rel='stylesheet')

        // jquery
        script(src="https://code.jquery.com/jquery-2.1.4.min.js")

        // Custom scripts
        script(src="js/scripts.js")

        // i18next
        script(src='https://unpkg.com/i18next/dist/umd/i18next.min.js')

        // Animations
        // Documentation: https://animate.style
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css")

        // Bootstrap toggle
        // https://www.bootstraptoggle.com
        link(href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet")
        script(src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js")

        // Flags
        link(href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.1.0/css/flag-icon.min.css" rel="stylesheet")

        // i18
        script(src='js/i18.js')

        // Bootstrap core JS
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')

        block head
            
            
    //- body
    body.bg-dark.bg-gradient.text-white
        //- Wrapper for keeping the footer at bottom (https://radu.link/make-footer-stay-bottom-page-bootstrap/)
        .d-flex.flex-column.min-vh-100
            // Navbar
            .mt-3
                .d-flex.align-content-center
                    div.mx-2.me-auto.my-auto
                        a(href="")
                            img.mx-3.navbar-logo(src="assets/img/logo/B4_no_bg.svg", alt="Stj√§rnholm Consulting")
                    div.mx-4.my-auto
                        input(id="language-toggle-event" type="checkbox" checked data-toggle="toggle" data-on="<span class='fa-lg flag-icon flag-icon-gb'/>" data-off="<span class='fa-lg flag-icon flag-icon-se'/>" data-onstyle="primary" data-offstyle="warning" data-size="mini")
                    //- div
                    //-     input(id="darkmode-toggle-event" type="checkbox" checked data-toggle="toggle" data-on="<i class='fa-lg bi bi-brightness-high-fill'/>" data-off="<i class='fa-lg bi bi-moon-fill'/>" data-onstyle="light" data-offstyle="dark" data-size="mini")

            // Solid line under header
            hr(class="solid" style="border-top: 1px solid gray")

            // Content
            .mt-2 
                block content

            // Solid line over footer
            hr(class="solid" style="border-top: 1px solid gray")

            footer.mt-auto
                include footer